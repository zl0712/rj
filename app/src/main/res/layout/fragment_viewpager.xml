<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:gravity="center"
            android:text="首页"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_home"
            android:gravity="center"
            android:text="推荐"
            android:textStyle="bold"
            android:textColor="#b3b3b3"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/tv_search"
            android:layout_toRightOf="@+id/tv_recommend"
            android:background="@drawable/serach_backgroud" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_message"
            android:drawableTop="@mipmap/iv_search"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:text="搜索"
            android:textColor="@color/text_black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_message"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:drawableTop="@mipmap/not_message"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/text_black"
            android:textSize="10sp" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="25dp"
        android:id="@+id/indicator"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/select_button" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ling_e" />

    <com.ruijing.zl.views.ViewPagerSlide
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.ruijing.zl.views.ViewPagerSlide>

</LinearLayout>
