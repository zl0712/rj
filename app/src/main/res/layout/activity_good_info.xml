<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.GoodInfoActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_marginBottom="50dp"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.ruijing.zl.views.carousel.CarouselViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:overScrollMode="never"></com.ruijing.zl.views.carousel.CarouselViewPager>

                <TextView
                    android:id="@+id/tv_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/circle_gray"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:text="1/2"
                    android:textColor="@color/white"
                    android:textSize="11sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bg_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/price_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_toRightOf="@+id/tv_tag"
                    android:id="@+id/tv_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4999"
                    android:textColor="@color/price_color"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="7999"
                    android:textColor="@color/text_grey"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="40mm织纹时尚石英表40mm织纹时尚石英表织纹时尚石英表40mm织纹时尚石英表"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="40mm织纹时尚石英表"
                android:textColor="@color/text_grey"
                android:textSize="13sp" />

            <RelativeLayout
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="快递包邮"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="月销1111笔"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="广州深圳"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:background="@color/bg_color"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/text_grey"
                    android:text="规格"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_guige"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:text="请选择商品规格"
                    android:drawableRight="@mipmap/iv_more_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/text_grey"
                    android:text="参数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:text="颜色 分类品牌"
                    android:drawableRight="@mipmap/iv_more_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/text_grey"
                    android:text="配送"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black"
                    android:text="请输入您的配送地址"
                    android:drawableRight="@mipmap/iv_more_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:background="@color/bg_color"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="11dp"
                    android:src="@mipmap/iv_halving"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

            <View
                android:background="@color/ling_e"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="5dp"
            android:src="@mipmap/info_back" />

        <TextView
            android:id="@+id/tv_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:layout_above="@+id/lin_bottom"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:paddingRight="4dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:drawableTop="@mipmap/buy_serve"
            android:text="客服"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_promptly"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/promptly_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_postpone"
            android:background="@mipmap/postpone_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>